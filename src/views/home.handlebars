<div class="row row-cols-1 row-cols-md-2 g-4 productsContainer">

    {{#each products}}
    <div  class="card text-bg-dark mb-3 productContainer"  style="width: 18rem;">
        <img src="" class="card-img-top" alt="Imagen de producto">
        <div class="card-body">
            <h5 class="card-title">{{this.title}}</h5>
            <p class="card-text">
                {{this.description}}
                Precio${{this.price}}
                Stock{{this.stock}}
                {{this.category}}
            </p>
            <a href="#" class="btn btn-primary">Comprar</a>
        </div>
    </div>
    {{/each}}

</div>